---
import Card from "../components/Card.astro"
---
<!-- <Carousel> -->
    <div id="animation-carousel" class="relative w-full h-96 justify-center" data-carousel="static">
        <!-- Carousel wrapper -->
        <div class="flex items-center justify-center h-32 overflow-hidden rounded-lg md:h-80 ">
            <!-- Item 1 -->
            <div class="hidden duration-200 ease-linear" data-carousel-item="active">
                <Card title="Standard" number="30" number1="50" number2="1000" fonct1="zdzd"/>
            </div>
            <!-- Item 2 -->
            <div class="hidden duration-200 ease-linear" data-carousel-item>
                <Card title="Pro" number="50" number1="50" number2="1000" fonct1="zdzd"/>
            </div>
            <!-- Item 3 -->
            <div class="hidden duration-200 ease-linear" data-carousel-item>
                <Card title="Business" number="70" number1="50" number2="1000" fonct1="zdzd"/>
            </div>
            <!-- Item 4 -->
            <div class="hidden duration-200 ease-linear" data-carousel-item>
                <Card>
            </div>
        </div>
        <!-- Slider controls -->
        <button type="button" class="absolute top-0 start-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-prev>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-dark/30 dark:bg-white-800/30 group-hover:bg-dark/50 dark:group-hover:bg-white-800/60 group-focus:ring-4 group-focus:ring-dark dark:group-focus:ring-white-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-dark dark:text-white-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                </svg>
                <span class="sr-only">Previous</span>
            </span>
        </button>
        <button type="button" class="absolute top-0 end-0 z-30 flex items-center justify-center h-full px-4 cursor-pointer group focus:outline-none" data-carousel-next>
            <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-dark/30 dark:bg-white-800/30 group-hover:bg-dark/50 dark:group-hover:bg-white-800/60 group-focus:ring-4 group-focus:ring-dark dark:group-focus:ring-white-800/70 group-focus:outline-none">
                <svg class="w-4 h-4 text-dark dark:text-white-800 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                </svg>
                <span class="sr-only">Next</span>
            </span>
        </button>
    </div>
<!-- </Carousel> -->